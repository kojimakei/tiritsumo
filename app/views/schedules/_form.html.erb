

<div class="contents row">
  <div class="container">
    <h3>予定を入れる</h3>
    
    <%= form_with(model: [@user, @schedule],url: user_schedules_path(current_user), local: true) do |f| %>
<%# 入力に不備があった場合、エラーメッセージを表示する %>
    <%= render 'shared/error_messages', model: f.object %>

      <%= f.date_field :date %>
      <%= f.time_field :begin_time %>
      <%= f.time_field :finish_time %>
      <%= f.text_field :plan, placeholder: "予定の内容" %>

      <%= f.submit "予定を入れる" %>
    <% end %>
  </div>
</div>

