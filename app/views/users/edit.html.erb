    <%= form_with model:@user, local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %>


  <div class="field">
    <p>目標</p>
  <%= f.text_area :goal %>
  </div>  

  <div class="field">
    <p>目標達成期限</p>
  <%= f.date_field :deadline %>
  </div>

  <div class="field">
    <p>目標のジャンル</p>
  <%= f.collection_select(:category_id, Category.all, :id, :name, {},{class:"select-box"}) %>
  </div>

  <div class="field">
    <p>ニックネーム</p>
    <%= f.text_area :nickname %>
  </div>    

  <div class="field">
    <p>メールアドレス</p>
    <%= f.text_area :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上 半角英数字)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <p>年齢</p>
  <%= f.collection_select(:age_id, Age.all, :id, :name, {},{class:"select-box"}) %>
  </div>  

  <div class="field">
    <p>職業</p>
  <%= f.collection_select(:occupation_id, Occupation.all, :id, :name, {},{class:"select-box"}) %>
  </div>  

  <div class="sell-btn-contents">
    <%= f.submit "変更する" ,class:"sell-btn" %>
    <%=link_to 'もどる', root_path, class:"back-btn" %>
  </div>    

  </div>
  <% end %>
