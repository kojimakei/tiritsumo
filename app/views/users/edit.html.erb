    <%= form_with model:@user, local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %>


  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
  </div>

  <div class="field">
    <%= f.label :目標 %><br />
    <%= f.text_field :goal, autofocus: true, autocomplete: "goal" %>
  </div>  

  <div class="field">
    <%= f.label :目標達成期日 %><br />
    <%= f.date_field :deadline, autofocus: true, autocomplete: "nickname" %>
  </div>

  <div class="field">
    <%= f.label :目標のジャンル %><br />
    <%= f.collection_select(:category_id, Category.all, :id, :name, {},{class:"select-box"}) %>
  </div>

  <div class="field">
    <%= f.label :年齢 %><br />
  <%= f.collection_select(:age_id, Age.all, :id, :name, {},{class:"select-box"}) %>
  </div>  

  <div class="field">
    <%= f.label :職業 %><br />
    <%= f.collection_select(:occupation_id, Occupation.all, :id, :name, {},{class:"select-box"}) %>
  </div>  



  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上 半角英数字)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>


  <div class="sell-btn-contents">
    <%= f.submit "変更する" ,class:"sell-btn" %>
    <%=link_to 'もどる', root_path, class:"back-btn" %>
  </div>    

  </div>
  <% end %>
