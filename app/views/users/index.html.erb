<div class="container" id="pagenate">
  <div class="row">
    <%# ルーム一覧表示 %>
    <div class="col-md-10">
      <div class="card mb-5">
        <h3 class="mt-3 mb-4">ユーザー検索</h3>
          <%= form_with(url: search_users_path, local: true, method: :get, class: "search-form") do |f| %>
            <div class="form-group col-md-10 mx-auto">          
              <%= f.text_field :keyword, placeholder: "userを検索する",class: 'form-control' %>
            </div>
            <div class="col-md-6 mx-auto mb-3">
              <%= f.submit "検索",class: 'btn btn-secondary btn-block' %>
            </div>        
          <% end %>     
      </div>      
      <div>
        <div id="users"></div>
          <%= render partial: 'user', collection: @users%>
      </div>
    </div>    
  </div>
  <div class="paginate-bottom">
    <%= paginate @users,remote: true %>
  </div>
</div>