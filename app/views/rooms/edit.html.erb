<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <div class="card mb-5">
        <div class="card-content">
          <h3>ルーム内容変更</h3>
          <%= form_with model: @room,local: true do |f| %>
            <input name="[user_id]" type="hidden" value=<%=current_user.id%>>
            <div id="rooms_error">
              <%= render 'shared/error_messages', model: f.object %>
            </div>  
            <div class="form-group">     
              <label>部屋名</label>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               
              <%= f.text_field :name, placeholder: "部屋名",class: 'form-control' %>
            </div>
            <div class="form-group"> 
              <label>習慣</label>         
              <%= f.text_field :habit, placeholder: "習慣を変更",class: 'form-control' %>
            </div>
            <div class="field">
              <%= f.file_field :image, autofocus: true, autocomplete: "image" %>
            </div>
            <div class="form-group text-center">
              <%= f.submit "変更", id:"submit",class: 'btn btn-success'  %>
            </div>          
          <% end %>
        </div>
      </div>   
    </div>
  </div>
</div>