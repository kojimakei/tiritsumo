<div class="container">
  <div class="row">
    <div class="col">
      <div class="card mb-5">
        <div class="card-content">
          <h3 class="mb-3 mt-3">ルーム内容変更</h3>
          <%= form_with model: @room,local: true do |f| %>
            <input name="[user_id]" type="hidden" value=<%=current_user.id%>>
            <div id="rooms_error">
              <%= render 'shared/error_messages', model: f.object %>
            </div>  
            <div class="form-group col-md-8 mx-auto  mb-4">     
              <label>部屋名</label>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               
              <%= f.text_field :name, placeholder: "部屋名",class: 'form-control' %>
            </div>
            <div class="form-group col-md-8 mx-auto  mb-4"> 
              <label>活動内容</label>         
              <%= f.text_field :habit, placeholder: "内容を変更",class: 'form-control' %>
            </div>
            <div class="form-group col-md-8 mx-auto  mb-5">
              <%= f.file_field :image, autofocus: true, autocomplete: "image" %>
            </div>
            <div class="col-md-5 mx-auto mb-5">
              <%= f.submit "変更", id:"submit",class: 'btn btn-secondary btn-block'  %>
            </div>          
          <% end %>
        </div>
      </div>   
    </div>
  </div>
</div>