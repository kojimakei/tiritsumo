<div class="container">
  <div class="row">
    <%# ルーム新規作成 %>
    <div class="col-md-4">
      <div class="card mb-5">
        <div class="card-content">
          <h3>ルーム作成</h3>
          <%= form_with model: @room,remote: true do |f| %>
          <input name="[user_id]" type="hidden" value=<%=current_user.id%>>
            <div id="rooms_error">
              <%= render 'shared/error_messages', model: f.object %>
            </div>  
            <div class="form-group">                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    
              <%= f.text_field :name, placeholder: "部屋名",class: 'form-control' %>
            </div>
            <div class="form-group">          
              <%= f.text_field :habit, placeholder: "習慣を入力",class: 'form-control' %>
            </div>
            <div class="form-group text-center">
              <%= f.submit "ルーム作成", id:"submit",class: 'btn btn-success'  %>
            </div>              
          <% end %>
        </div>
      </div>   
    </div>

    <%# ルーム一覧表示 %>
    <div class="col-md-8">
      <div class="card mb-5">
        <h3>ルーム検索</h3>
          <%= form_with(url: search_rooms_path, local: true, method: :get, class: "search-form") do |f| %>
            <div class="form-group">          
              <%= f.text_field :keyword, placeholder: "相談所を検索する",class: 'form-control' %>
            </div>
            <div class="form-group text-center">
              <%= f.submit "検索",class: 'btn btn-success' %>
            </div>        
          <% end %>     
      </div>      
      <div>
        <div id="rooms"></div>
          <%= render partial: 'room', collection: @rooms%>
      </div>
    </div>    
  </div>
</div>
