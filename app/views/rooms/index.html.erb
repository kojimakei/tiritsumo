<div class="container" id="pagenate">
  <div class="row">
    <%# ルーム新規作成 %>
    <div class="col-md-5">
      <div class="card mb-5">
        <div class="card-content">
          <h3 class="mt-3 mb-3">ルーム作成</h3>
          <%= form_with model: @room,remote: true do |f| %>
          <input name="[user_id]" type="hidden" value=<%=current_user.id%>>
            <div id="rooms_error">
              <%= render 'shared/error_messages', model: f.object %>
            </div>  
            <div class="form-group col-md-10 mx-auto">                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    
              <%= f.text_field :name, placeholder: "部屋名",class: 'form-control' %>
            </div>
            <div class="form-group col-md-10 mx-auto">          
              <%= f.text_field :habit, placeholder: "活動内容を入力",class: 'form-control' %>
            </div>
            <div class="col-md-10 mx-auto mb-3">
              <%= f.submit "ルーム作成", id:"submit",class: 'btn btn-secondary btn-block'  %>
            </div>              
          <% end %>
        </div>
      </div>   
    </div>

    <%# ルーム一覧表示 %>
    <div class="col-md-7">
      <div class="card mb-5">
        <h3 class="mt-3 mb-4">ルーム検索</h3>
          <%= form_with(url: search_rooms_path, local: true, method: :get, class: "search-form") do |f| %>
            <div class="form-group col-md-10 mx-auto">          
              <%= f.text_field :keyword, placeholder: "相談所を検索する",class: 'form-control' %>
            </div>
            <div class="col-md-6 mx-auto mb-3">
              <%= f.submit "検索",class: 'btn btn-secondary btn-block' %>
            </div>        
          <% end %>     
      </div>      
      <div>
        <div id="rooms"></div>
          <%= render partial: 'room', collection: @rooms%>
      </div>
    </div>    
  </div>
  <div class="paginate-bottom">
    <%= paginate @rooms,remote: true %>
  </div>
</div>