<div class="container-fluid">
  <div class="row">
    <%# ルーム新規作成 %>
    <div class="col-md-4">
      <%= link_to "ルーム作成", new_room_path %>
    </div>
    <%# ルーム一覧表示 %>
    <div class="col-md-8">
      <div class="card">
        <h3>ルーム一覧</h3>
          <ul>
            <% @rooms.each do |room| %>
              <li><%= link_to room.name, room_path(room.id) %></li>
            <% end %>
          </ul>
      </div>
    </div>    
  </div>
</div>