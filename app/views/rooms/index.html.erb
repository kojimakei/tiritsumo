<div class="container-fluid">
  <div class="row">
    <%# ルーム新規作成 %>
    <div class="col-md-4">
      <%= link_to "ルーム作成", new_room_path, class: "link"%>
    </div>
    <%# ルーム一覧表示 %>
    <div class="col-md-8">   
      <div class="card mb-3">
      <h3>ルーム一覧</h3>
      <%= form_with(url: search_rooms_path, local: true, method: :get, class: "search-form") do |form| %>
        <%= form.text_field :keyword, placeholder: "相談所を検索する", class: "search-input" %>
        <%= form.submit "検索", class: "search-btn" %>
      <% end %>     
      </div>  
        <ul>
            <%= render partial: 'room', collection: @rooms  %>
        </ul>
    </div>    
  </div>
</div>