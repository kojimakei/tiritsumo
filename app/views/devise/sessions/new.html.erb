<div class="container">
  <div class="row">
    <div class="col mx-auto">
      <div class="card">
      <h3 class="mt-3 mb-3">ログイン</h3>
      <%= form_with model: @user, url:user_session_path, local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
      <div class="form-group col-md-8 mx-auto">
        <label for="user_email">email</label>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-group col-md-8 mx-auto mb-5">
        <label for="user_password">password</label>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
       <div class="col-md-5 mx-auto mb-2">
         <%= f.submit "ログイン",class: 'btn btn-secondary btn-block' %>
       </div>
       <div class="col-md-5 mx-auto mb-5"><%= link_to 'ゲストユーザーでログイン', users_guest_sign_in_path, method: :post, class: "btn btn-secondary btn-block" %></div>
       <% end %>
      </div>
    </div>
  </div>
</div>


