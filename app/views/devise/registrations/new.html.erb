<div class="container">
  <div class="row">
    <div class="col mx-auto">
      <div class="card">
      <h3 class="mt-5 mb-5">新規登録</h3>
      <%= form_with model: @user, url:user_registration_path, local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group col-md-8 mx-auto">
          <label for="user_nickname">ニックネーム</label>
          <%= f.text_field :nickname, class: 'form-control' %>
        </div>
        <div class="form-group col-md-8 mx-auto">
          <label for="user_goal">目標</label>
          <%= f.text_field :goal, class: 'form-control' %>
        </div>  
        <div class="form-group col-md-8 mx-auto">
          <label for="user_deadline">目標達成期日</label>
          <%= f.date_field :deadline, class: 'form-control' %>
        </div>
        <div class="form-group col-md-8 mx-auto">
          <label for="user_category_id">目標のジャンル</label>
          <%= f.collection_select(:category_id, Category.all, :id, :name, {},{class: 'form-control'}) %>
        </div>
        <div class="form-group col-md-8 mx-auto">
          <label for="user_age_id">年齢</label>
          <%= f.collection_select(:age_id, Age.all, :id, :name, {},{class: 'form-control'}) %>
        </div>  
        <div class="form-group col-md-8 mx-auto">
          <label for="user_occupation_id">職業</label>
          <%= f.collection_select(:occupation_id, Occupation.all, :id, :name, {},{class: 'form-control'}) %>
        </div>  
        <div class="form-group col-md-8 mx-auto">
          <label for="user_email">メールアドレス</label>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group col-md-8 mx-auto">
          <label for="user_password">パスワード</label>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上 半角英数字)</em>
          <% end %><br />
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group col-md-8 mx-auto mb-5">
          <label for="user_password_confirmation">パスワード（確認用）</label>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <div class="col-md-6 mx-auto mb-5">
          <%= f.submit "登録",class: 'btn btn-secondary btn-block' %>
        <div>
      <% end %>
      </div>
    </div>
  </div>
</div>
