<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
    <div class="card">
    <h3 class="mt-5 mb-5">今日のちりつも</h3>
      <%= form_with(model: @stack, local: true) do |f| %>
      <%# 入力に不備があった場合、エラーメッセージを表示する %>
      <%= render 'shared/error_messages', model: f.object %>
        <form>
          <div class="form-group col-md-8 mx-auto">
            <label>日付</label>
              <%= f.date_field :date, class: 'form-control'%>
          </div>
          <div class="form-group col-md-8 mx-auto">
            <label>内容</label>
              <%= f.text_field :text,class: 'form-control' %>
          </div>
          <div class="form-group col-md-8 mx-auto">
            <label>取り組み時間</label>
              <%= f.collection_select(:work_time_id, WorkTime.all, :id, :name, {},{class:"form-control"}) %>時間
          </div>
          <div class="form-group col-md-8 mx-auto">
            <label>達成可否</label>
              <%= f.check_box :achieved ,class: 'form-control' %>
          </div>                    
          <div class="col-md-5 mx-auto mb-5">
            <%= f.submit "積み上げる",class: 'btn btn-secondary btn-block' %>
          </div>
        </form>
      <%end%>
    </div>
    </div>
  </div>
</div>