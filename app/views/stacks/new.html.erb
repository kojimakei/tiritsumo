<div class="container">
  <div class="row">
    <div class="col">
      <div class="card">
        <h3 class="mb-3 mt-3">今日のちりつも（計画）</h3>
          <%= form_with(model: @stack_tag, url: stacks_path, local: true) do |f| %>
          <%# 入力に不備があった場合、エラーメッセージを表示する %>
          <%= render 'shared/error_messages', model: f.object %>  
            <form>
              <div class="form-group col-md-8 mx-auto">
                <label>日付</label>
                <%= f.date_field :date, class: 'form-control'%>
              </div>
              <div class="form-group col-md-8 mx-auto mb-4">
                <label>内容</label>
                <%= f.text_field :text,class: 'form-control',placeholder:"例)railsチュートリアル2章" %>
              </div>
              <div class="orm-group col-md-8 mx-auto mb-4", id='tag-field'>
                <label>タグ ※コンマ区切りで記入してください</label>
                <%= f.text_field :name, class:"form-control",placeholder:"例)プログラミング,rails,javascript" %>
              </div>
              <div class="text-center" id="search-result">
              </div>              
              <div class="col-md-5 mx-auto mb-4">
                <%= f.submit "計画する",class: 'btn btn-secondary btn-block' %>
              </div>
            </form>
          <%end%>
      </div>
    </div>
  </div>
</div>


